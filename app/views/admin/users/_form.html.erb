<%= simple_form_for [:admin, user] do |f| %>
  <div class="row">
    <div class="col-md-6">
      <h2>Infos</h2>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :email %>
      <%= f.input :password,
                  required: user.new_record?,
                  hint: 'Leave blank if you do not wish to change the password' %>
    </div>
    <div class="col-md-6">
      <h2>Roles</h2>
      <%= f.input :role, label: 'IdP', include_blank: false %>
      <%= f.input :blog_role, label: 'Blog', include_blank: false %>
      <%= f.input :video_role, label: 'Video', include_blank: false %>
    </div>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
